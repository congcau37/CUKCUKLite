<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <!--<item name="android:windowMinWidthMajor">50%</item>-->
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="FontBodyTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_body_title</item>
    </style>

    <style name="FontBodyTextRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_body_text</item>
    </style>

    <style name="FontBodyTextOverline">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_overline</item>
    </style>

    <style name="FontBodyTextItalic">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">@dimen/font_body_text</item>
    </style>

    <style name="FontHeaderTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_title_header</item>
    </style>

    <style name="FontHeaderSubTitle1">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_subtile_header1</item>
    </style>

    <style name="FontHeaderSubTitle2">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_subtile_header2</item>
    </style>

    <style name="FontButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_button</item>
    </style>

    <style name="FontCaption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_caption</item>
    </style>
</resources>
