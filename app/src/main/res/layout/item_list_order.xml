<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_margin_small"
    android:layout_marginBottom="@dimen/app_margin_small"
    android:orientation="horizontal">

    <ImageView
        android:src="@drawable/_6_cam_ep"
        android:id="@+id/imgFood"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/app_margin_small"
        android:background="@drawable/bg_color_round"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/app_margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFoodName"
            android:text="TÃªn"
            android:textStyle="bold"
            android:textSize="@dimen/tv_size_medium"
            android:textColor="@color/color_black"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            tools:ignore="DuplicateIds" />

        <LinearLayout
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="DuplicateIds" >

            <TextView
                android:text="@string/tv_price"
                android:textSize="@dimen/tv_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPrice"
                android:text="100"
                android:textSize="@dimen/tv_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgArrow"
        android:src="@drawable/ic_chevron_right"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>