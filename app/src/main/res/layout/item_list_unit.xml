<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnRowUnit"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="@dimen/icon_selected_item_size"
                android:layout_height="@dimen/icon_selected_item_size"
                android:layout_marginLeft="@dimen/app_margin_medium"
                android:layout_marginTop="@dimen/app_margin_small"
                android:layout_marginBottom="@dimen/app_margin_small">
                <ImageView
                    android:id="@+id/ivChecked"
                    android:layout_width="@dimen/icon_selected_item_size"
                    android:layout_height="@dimen/icon_selected_item_size"
                    android:visibility="gone"
                    android:src="@drawable/ic_checked" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvUnitName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_black_light"
                android:layout_marginLeft="@dimen/app_margin_small"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlEdit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_white_no_border_no_radius_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/app_margin_medium"
            android:paddingRight="@dimen/app_margin_medium">

            <ImageView
                android:layout_width="@dimen/icon_selected_item_size"
                android:layout_height="@dimen/icon_selected_item_size"
                android:src="@drawable/ic_edit" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>