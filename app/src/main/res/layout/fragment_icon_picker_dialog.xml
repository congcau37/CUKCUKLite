<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_icon_margin"
        android:layout_marginBottom="@dimen/list_icon_margin"
        ></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_below="@id/rvIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/app_margin_medium"
        android:layout_marginRight="@dimen/app_margin_medium"
        android:textSize="@dimen/font_size_medium"
        android:text="@string/cancel"
        android:textColor="@color/color_primary_light" />
</FrameLayout>